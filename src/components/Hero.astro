---
const {
  class: className,
  id: id,
  src,
  heroHeaderText,
  heroParagraphText,
  hasHeroButton,
  heroButtonText,
  href,
} = Astro.props
import Section from "./Section.astro"
import Overlay from "./Overlay.astro"
import Button from "./Button.astro"
---

<Section class="relative h-screen w-screen">
  <img src={src} class="h-full w-full object-cover" />
  <div
    class="absolute inset-0 flex flex-col items-center justify-center gap-4 z-[10000]"
  >
    <h1 class="text-white text-3xl font-bold tracking-wide md:text-6xl">
      {heroHeaderText}
    </h1>
    <p class="text-white text-2xl text-center px-4 max-w-[65ch] md:text-3xl">
      {heroParagraphText}
    </p>
    {hasHeroButton && <Button buttonText={heroButtonText} href={href}/>}
  </div>

  <Overlay />
</Section>
