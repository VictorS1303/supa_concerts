---
const { class: className, id: id } = Astro.props;
---

<div class="flex gap-4 justify-center container loading-animation-container" id={id ?? "loading_animation_container"}>
  <div class="circle bg-white h-[15px] w-[15px] rounded-full"></div>
  <div class="circle bg-white h-[15px] w-[15px] rounded-full"></div>
  <div class="circle bg-white h-[15px] w-[15px] rounded-full"></div>
</div>

<style>
  .circle {
    animation: wave 1s infinite ease-in-out;
  }

  .circle:nth-child(1) {
    animation-delay: 0s;
  }

  .circle:nth-child(2) {
    animation-delay: .5s;
  }


  @keyframes wave {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>